<div class="container" id="login">
	<div class="screen" id="signup-screen">
		<div class="screen__content">
			<%= form_with url: '/signup', class: "login" do |form| %>
				<div class="login__field">
					<i class="login__icon bi bi-person"></i>
					<%= form.text_field :f_name, class: "login__input", placeholder: "First Name" %>
				</div>
				<div class="login__field">
					<i class="login__icon bi bi-person"></i>
					<%= form.text_field :l_name, class: "login__input", placeholder: "Last Name" %>
				</div>
				<div class="login__field">
					<i class="login__icon bi bi-envelope"></i>
					<%= form.email_field :email, class: "login__input", placeholder: "EmailID" %>
				</div>
				<div class="login__field">
					<i class="login__icon bi bi-calendar"></i>
					<%= form.date_field :date_of_birth, class: "login__input", placeholder: "Date of Birth" %>
				</div>
				<div class="login__field">
					<i class="login__icon bi bi-phone"></i>
					<%= form.text_field :mobile, class: "login__input", placeholder: "Mobile No." %>
				</div>
                <div class="login__field">
					<i class="login__icon bi bi-lock"></i>
					<%= form.password_field :password, class: "login__input", placeholder: "Password" %>
				</div>
                <div class="login__field">
					<i class="login__icon bi bi-lock"></i>
					<%= form.password_field :password, class: "login__input", placeholder: "Confirm Password" %>
				</div>
				
					<%= form.submit "Sign up", class: "button login__submit" %>
								
			<%end%>
		</div>
		<div class="screen__background">
			<span class="screen__background__shape screen__background__shape4"></span>
			<span class="screen__background__shape screen__background__shape3"></span>		
			<span class="screen__background__shape screen__background__shape2"></span>
			<span class="screen__background__shape screen__background__shape1"></span>
		</div>		
	</div>
</div>